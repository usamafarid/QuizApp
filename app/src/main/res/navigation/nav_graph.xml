<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">



    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.quizapp.fragments.HomeFragment"
        android:label="Quiz Categories"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_quizFragment"
            app:destination="@id/quizFragment" />


        <action
            android:id="@+id/action_homeFragment_to_addQuestionFragment"
            app:destination="@id/addQuestionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addCategoryFragment"
            app:destination="@id/addCategoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.quizapp.fragments.QuizFragment"
        android:label="Quiz"
        tools:layout="@layout/fragment_quiz">

        <argument android:name="categoryID"
            app:argType="integer"/>



        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment" />

    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.quizapp.fragments.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result" >

        <argument android:name="final-score"
            app:argType="integer">

        </argument>
        <argument android:name="total-questions"
            app:argType="integer">

        </argument>
        <action
            android:id="@+id/action_resultFragment_to_leaderBoardFragment"
            app:destination="@id/leaderBoardFragment" />
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/leaderBoardFragment"
        android:name="com.example.quizapp.fragments.LeaderBoardFragment"
        android:label="LeaderBoard"
        tools:layout="@layout/fragment_leader_board" >

    </fragment>

    <fragment
        android:id="@+id/addQuestionFragment"
        android:name="com.example.quizapp.fragments.AddQuestionFragment"
        android:label="fragment_add_question"
        tools:layout="@layout/fragment_add_question" />
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.example.quizapp.fragments.AddCategoryFragment"
        android:label="fragment_add_category"
        tools:layout="@layout/fragment_add_category" />


</navigation>